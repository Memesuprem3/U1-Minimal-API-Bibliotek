@model List<API_Bibliotek.Models.DTOs.BookDTO>

<h2>Books</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Year</th>
            <th>Available</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)

        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Genre</td>
                <td>@book.Year</td>
                <td>@book.IsAvailable</td>
                <td>
                    <a href="/Book/Details/@book.Id">Details</a> |
                    <a href="/Book/Edit/@book.Id">Edit</a> |
                    <form asp-action="Delete" asp-controller="Book" asp-route-id="@book.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>